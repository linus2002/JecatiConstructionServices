            gmail.addEventListener("keyup", () => {
                fetch("/getData")
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok ' + response.statusText);
                        }
                        return response.json();
                    })
                    .then(data => {
                        const text = gmail.value;
                        const { transaction } = data;
                        const specifyTransaction = transaction.find(transact => transact.email === text);

                        if (specifyTransaction) {
                            fullname.value = specifyTransaction.contactPerson;
                            contactNumber.value = specifyTransaction.contactNumber;
                        }
                    })
                    .catch(error => {
